<div class="container">

  <h2><%= image_tag @user.facebook_picture_url, class: 'avatar avatar-large' %> <%= @user.first_name.capitalize %> <%= @user.last_name.capitalize %></h2>

  <div class="tabs">
    <a class="tab active" href="bookings">
      <h3>Your bookings</h3>
      <p>x planned</p>
    </a>
    <a class="tab" href="horses">
      <h3>Yours horses</h3>
      <p>y proposed</p>
    </a>
    <a class="tab" href="profile">
      <h3>Your profile</h3>
      <p>?</p>
    </a>
  </div>


  <h3>Your bookings</h3>

  <ul>
    <% @user.bookings.each do |booking| %>
      <li>
        <%= cl_image_tag_with_default booking.horse %>
        <%= link_to booking.horse.name, booking.horse %> - <%= booking.date %> - <%= booking.horse.price %> €
      </li>
    <% end %>
  </ul>


  <h3>Your horses</h3>
  <%= link_to "Add your cuttest horse", new_horse_path, class: 'btn' %>

  <% @user.horses.each do |horse| %>
    <h4><%= cl_image_tag_with_default horse %> <%= horse.name %> - <%= horse.price %> €</h4>
    <h4>Availabilities</h4>
    <%= simple_form_for :available_horse, method: :get, url: new_availability_path do |f| %>
      <%= f.input :horse, as: :hidden, input_html: {value: horse.id} %>
      <%= f.submit "Add availability", class: 'btn btn-primary' %>
    <% end %>
    <ul>
      <% horse.availabilities.each do |availability| %>
        <li>
          <%= availability.start_at %> - <%= availability.finish_at %>
        </li>
      <% end %>
    </ul>
  <% end %>

</div>

