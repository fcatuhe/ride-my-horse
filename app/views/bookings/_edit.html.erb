
<!-- Modal -->
<div class="modal fade" id="<%= booking.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
      </div>
      <div class="modal-body">

        <div class="text-center">
          <h3><%= booking.horse.name %></h3>
          <p><%= booking.date.strftime('%d %B %Y') %></p>
          <p><%= booking.horse.address %></p>
          <p><%= booking.horse.category.name %></p>
          <p><%= booking.horse.price %> â‚¬ per day</p>
        </div>

        <%= simple_form_for booking do |f| %>
          <% if booking.user == current_user %>
            <%= f.input :user_rating, collection: 0..5, as: :radio_buttons %>
            <%= f.input :user_comment %>
          <% end %>
          <% if booking.horse.user == current_user %>
            <%= f.input :owner_rating, collection: 0..5, as: :radio_buttons %>
            <%= f.input :owner_comment %>
          <% end %>
            <%= f.submit class: 'btn btn-primary' %>
        <% end %>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>


