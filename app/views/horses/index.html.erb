<div class="container">
  <div class="row">
    <div class="col-sm-8">
      <div class="frame">
        <%= render 'search_form' %>
      </div>
      <div class="row">
        <div class="text-center"><p>Here are the results :</p></div>
        <% @horses.each do |horse| %>
          <div class="col-xs-12 col-sm-6">
            <div class="results">
              <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.1)), url(<%= cl_image_path_with_default(horse) %>);">
                <div class="card-category"><%= horse.category.name %><br><%= horse.stars %></div>
                <div class="card-description">
                  <h2><%= horse.name %></h2>
                  <p><%= "#{horse.description.first(50)}..." if horse.try(:description) %></p>
                </div>
                <!-- <img class="card-user avatar" src="user.jpg"> -->
                <%= link_to horse.name, horse, class: 'card-link' %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <div class="col-sm-4">
      Map here
      <div id="map" style="width: 100%; height: 600px"></div>

      <% content_for(:after_js) do %>
        <%= javascript_tag do %>
          $(document).ready(function() {
            var handler = Gmaps.build('Google');
            handler.buildMap({ internal: { id: 'map' } }, function() {
              markers = handler.addMarkers(<%= raw @hash.to_json %>);
              handler.bounds.extendWith(markers);
              handler.fitMapToBounds();
              if (markers.length == 0) {
                handler.getMap().setZoom(2);
              } else if (markers.length == 1) {
                handler.getMap().setZoom(14);
              }
            });
          });
        <% end %>
      <% end %>

    </div>
  </div>
</div>
